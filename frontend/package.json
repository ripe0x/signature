{
  "name": "less-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "copy-core": "cp ../web/fold-core.js ./src/lib/fold-core.js",
    "minify-core": "terser ../web/fold-core.js -o ./src/lib/fold-core.js -c -m --module",
    "dev": "npm run copy-core && next dev",
    "build": "npm run minify-core && next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wagmi": "^2.14.1",
    "viem": "^2.21.54",
    "@tanstack/react-query": "^5.62.7"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "tailwindcss": "^3.4.16",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.4",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.18",
    "terser": "^5.36.0"
  }
}
