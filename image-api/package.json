{
  "name": "fold-image-api",
  "version": "1.0.0",
  "description": "Image generation API for Fold NFTs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "copy-core": "cp ../web/fold-core.js public/fold-core.js",
    "deploy": "npm run copy-core && fly deploy"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "playwright": "1.57.0",
    "viem": "^2.43.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
